{% extends "layout.html.twig" %}

{% block content %}
<h1>📝 Meine ToDo-Liste</h1>

<form id="todo-form">
    <input type="text" id="todo-input" placeholder="Neue Aufgabe" required>
    <button type="submit">Hinzufügen</button>
</form>

<ul id="todo-list" style="margin-top: 2rem;"></ul>

<!-- Update-Form -->
<form id="todo-update-form" style="display:none; margin-top: 2rem;">
    <input type="hidden" id="todo-id">
    <input type="text" id="todo-update-input" placeholder="Aufgabe bearbeiten">
    <select id="todo-completed">
        <option value="0">Offen</option>
        <option value="1">Erledigt</option>
    </select>
    <button type="submit">Aktualisieren</button>
</form>

<script src="js/todo.js"></script>
{% endblock %}
